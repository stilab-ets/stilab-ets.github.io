import { useUserAuth } from '@/hooks/auth/useUserAuth'
import { useStudentDashboard } from '@/hooks/dashboard/useStudentDashboard'

const { user } = useUserAuth()
const {
  isLoading,
  hasErrors,
  errors,
  tabs,
  quickActions,
  studentStats,
