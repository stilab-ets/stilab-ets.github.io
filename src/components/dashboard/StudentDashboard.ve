  nextEvents,
  availableProjects,
  fetchDashboardData,
  navigateToPage,
  expressInterest,
  formatDate
} = useStudentDashboard()

const activeTab = ref('overview')

const handleQuickAction = (action: any) => {
  if (action.title.includes('Courses')) {
    activeTab.value = 'courses'
  } else if (action.title.includes('Profile')) {
    activeTab.value = 'profile'
  } else {
    action.action()
  }
}

onMounted(() => {
  fetchDashboardData()
})
</script>

