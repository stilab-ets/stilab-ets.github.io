{
  "name": "research-lab-platform",
  "version": "0.2.0",
  "description": "Plateforme web pour un laboratoire de recherche en génie logiciel.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "host": "vite --host",
    "start": "ts-node src/index.ts",
    "ts-build": "tsc",
    "ts-dev": "ts-node-dev --respawn src/index.ts",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,md}\"",
    "lint": "eslint src --ext .ts,.tsx,.vue --max-warnings=0",
    "lint-staged": "lint-staged",
    "test": "vitest --coverage"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,json,css,scss,md}": [
      "prettier --check \"src/**/*.{js,ts,vue,json,css,md}\""
    ]
  },
  "keywords": [
    "research",
    "lab",
    "typescript",
    "vue",
    "tailwind",
    "science",
    "platform"
  ],
  "author": "Labo de Génie Logiciel",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "axios": "^1.10.0",
    "express": "^5.1.0",
    "jwt-decode": "^4.0.0",
    "lucide-vue-next": "^0.525.0",
    "research-lab-platform": "file:",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.3",
    "@vue/compiler-sfc": "^3.5.17",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  }
}
